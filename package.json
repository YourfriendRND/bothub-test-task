{
  "name": "bothub-test-task",
  "version": "1.0.0",
  "description": "RESTful API for book collection managment",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run prisma:gen-connection-string && node ./dist/main.js",
    "build": "npm run clean && npm run compile",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "npx ts-node",
    "prisma:gen-connection-string": "node ./dist/model/prisma.config.js",
    "prisma:migrate": "npx prisma migrate dev --schema ./src/model/prisma/schema.prisma",
    "test": "test"
  },
  "keywords": [
    "bothub",
    "rest",
    "api"
  ],
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "author": "Anton Ivanov",
  "license": "ISC",
  "devDependencies": {
    "@prisma/client": "5.18.0",
    "@types/express": "4.17.21",
    "@types/node": "22.2.0",
    "express": "^4.19.2",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.6.3",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "chalk": "5.3.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dayjs": "1.11.12",
    "dotenv": "16.4.5",
    "express-async-handler": "1.2.0",
    "http-status-codes": "2.3.0",
    "inversify": "6.0.2",
    "joi": "17.13.3",
    "jose": "5.6.3",
    "log4js": "6.9.1",
    "prisma": "5.18.0",
    "reflect-metadata": "0.2.2"
  }
}
